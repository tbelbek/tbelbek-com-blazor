@inject IStringLocalizer<Resource> L
<!-- About Section
================================================== -->
<section id="about">
    <div class="row">
        <div class="three columns">
            <img class="profile-pic" src="images/profilepic.jpg" alt="" />
        </div>
        <div class="nine columns main-col">
            <h2>@L["Hakkimda"]</h2>
            <p>
                @((MarkupString)L["AboutTxt"].Value)
            </p>
            <div class="row">
                <div class="columns contact-details">
                    <h2>@L["IletisimDetaylari"]</h2>
                    <p class="address">
                        <span>Tuğhan Belbek</span><br>
                        <span>
                            Göteborg, Sweden
                        </span><br>
                        <a href="tel:+46791027210">+46 79 102 72 10</a><br>
                        <a href="mailto:tughanbelbek@gmail.com">tughanbelbek@gmail.com</a>
                    </p>
                    <p>
                        <a href="Tughan_Belbek_Resume.pdf" download="@fileName" style="font-size:x-large"><em
                                class="fa fa-angle-down fa-2x bounce"></em>&nbsp;&nbsp;@L["CvIndir"]</a>
                    </p>
                </div>
                <div class="columns download">

                    <p class="address">
                        <img alt="CV-QrCode" src="images/qrcode-tbelbek-com.png" width="250" />
                    </p>
                </div>
            </div> <!-- end row -->
        </div> <!-- end .main-col -->
    </div>
</section> <!-- About Section End-->


@code {
    string fileName = string.Concat("tbelbek_CV_", DateTime.Now.ToShortDateString(), ".pdf");
}